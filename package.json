  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "dotenvx run -f .env.development -- node ./dist/index.js",
    "tsc": "tsc",
    "postinstall": "npm run tsc",
    "dev": "dotenvx run -f .env.development -- ts-node-dev --respawn --pretty --transpile-only ./src/index.ts",
    "test": "cross-env NODE_ENV=test jest --runInBand --"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.21.0",
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "express": "^5.0.1",
    "express-fileupload": "^1.4.0",
    "express-oauth2-jwt-bearer": "^1.5.0",
    "express-validator": "^7.0.1",
    "fs": "^0.0.1-security",
    "helmet": "^7.0.0",
    "http": "^0.0.1-security",
    "mongodb": "^6.0.0",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "tcx-js": "github:vikidi/tcx-js",
    "temp": "^0.9.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-fileupload": "^1.5.1",
    "@types/jest": "^29.5.13",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.7",
    "@types/temp": "^0.9.4",
    "@typescript-eslint/parser": "^8.10.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/src/index.js"
    ],
    "testTimeout": 10000,
    "bail": true,
    "verbose": true,
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ]
  }
